# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file

[*]
charset = utf-8
end_of_file = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.coffee]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4

[*.{sh, zsh}]
indent_style = space
indent_size = 4

[*.{md, markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
